<system.webServer>

    <!-- (Opcional) MIME mínimos -->
    <staticContent>
      <remove fileExtension=".json" />
      <remove fileExtension=".wasm" />
      <remove fileExtension=".webmanifest" />
      <remove fileExtension=".svg" />
      <remove fileExtension=".webp" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".wasm" mimeType="application/wasm" />
      <mimeMap fileExtension=".webmanifest" mimeType="application/manifest+json" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <mimeMap fileExtension=".webp" mimeType="image/webp" />
    </staticContent>

    <!-- URL Rewrite: dejar pasar archivos reales y reescribir todo lo demás a index.html -->
    <rewrite>
      <rules>
        <!-- Si el archivo/carpeta existe, dejarlo -->
        <rule name="SpaStaticFiles" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAny">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" />
          </conditions>
          <action type="None" />
        </rule>

        <!-- (Opcional) si convivís con backend en /api, no reescribir eso -->
        <rule name="ApiPassThrough" stopProcessing="true">
          <match url="^api/.*" />
          <action type="None" />
        </rule>

        <!-- Todo lo demás, a index.html (Angular se encarga de la ruta) -->
        <rule name="AngularRoutes" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>

  </system.webServer>
</configuration>
